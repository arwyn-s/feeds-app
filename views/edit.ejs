<%- include("partials/header") %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit Post</div>
        <form class="ui form" action="/feeds/<%=feed._id%>?_method=PUT" method='POST'>
            <div class="field">
                <label for="">Title</label>
                <input type="text" name='feed[title]' value="<%=feed.title%>">
            </div>
            <div class="field">
                <label for="">Image</label>
                <input type="text" name='feed[image]' value="<%=feed.image%>">
            </div>
            <div class="field">
                <label for="">Story</label>
                <textarea name='feed[body]' ><%=feed.body%></textarea>
            </div>
            <input type="submit" class="ui teal big basic button">
        </form>
    </div>
<%- include("partials/footer") %>